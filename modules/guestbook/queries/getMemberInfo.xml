<query id="getMemberInfo" action="select">
    <tables>
        <table name="member" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="user_name" var="user_name" notnull="notnull" pipe="and"/>
		<condition operation="equal" column="password" var="password" notnull="notnull" pipe="and"/>
    </conditions>
</query>
