<query id="getGuestbookItemComment" action="select">
    <tables>
        <table name="guestbook_item" alias="guestbook" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="parent_srl" var="guestbook_item_srl"/>
    </conditions>
</query>
